<Window x:Class="EasySaveWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ext="clr-namespace:EasySaveWPF.Services"
    Title="EasySave" Height="450" Width="800">

    <DockPanel>
        <!-- Barre latérale pour la navigation -->
        <StackPanel Width="200" DockPanel.Dock="Left" Background="#333">
            <!-- Utilisation de l'extension de balisage pour la localisation -->
            <Button Content="{ext:Loc Key='SideBarHome'}" Padding="10" Foreground="White" Background="Transparent" BorderThickness="0" Click="Home_Click"/>
            <Button Content="{ext:Loc Key='SideBarSettings'}" Padding="10" Foreground="White" Background="Transparent" BorderThickness="0" Click="Settings_Click"/>
            <Button Content="{ext:Loc Key='SideBarAbout'}" Padding="10" Foreground="White" Background="Transparent" BorderThickness="0" Click="About_Click"/>
            <Button Content="{ext:Loc Key='SideBarHelp'}" Padding="10" Foreground="White" Background="Transparent" BorderThickness="0" Click="Help_Click"/>
        </StackPanel>

        <!-- Zone de contenu principale -->
        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
