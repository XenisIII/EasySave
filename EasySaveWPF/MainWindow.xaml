<Window x:Class="EasySaveWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveWPF"
        mc:Ignorable="d"
        Title="EasySave" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <!-- Barre de menu en haut -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Fichier">
                <MenuItem Header="Menu Principal" Click="MenuPrincipal_Click"/>
                <!-- Ajoutez d'autres options de menu ici -->
            </MenuItem>
            <MenuItem Header="Paramètres">
                <MenuItem Header="Langues" Click="LanguageSettingsPage"/>
                <MenuItem Header="Logs" Click="MenuPrincipal_Click"/>
                <!-- Ajoutez d'autres options de menu ici -->
            </MenuItem>
            <!-- Ajoutez d'autres menus principaux ici -->
        </Menu>

        <!-- Zone de contenu pour afficher les différentes vues -->
        <Frame x:Name="ContentFrame" Margin="0,30,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
