<Window x:Class="EasySaveWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave" Height="450" Width="800">
    <DockPanel>
        <!-- Sidebar -->
        <StackPanel Width="85" DockPanel.Dock="Left" Background="#333">
            <Button Content="Accueil" Padding="10" Foreground="White" Background="Transparent" BorderThickness="0" Click="Home_Click"/>
            <Button Content="Paramètres" Padding="10" Foreground="White" Background="Transparent" BorderThickness="0" Click="Settings_Click"/>
            <Button Content="À Propos" Padding="10" Foreground="White" Background="Transparent" BorderThickness="0" Click="About_Click"/>
            <Button Content="Aide" Padding="10" Foreground="White" Background="Transparent" BorderThickness="0" Click="Help_Click"/>
        </StackPanel>

        <!-- Content Area -->
        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>

