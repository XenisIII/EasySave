<Window x:Class="EasySaveRemoteClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveRemoteClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Backup Status:" />
        <TextBlock x:Name="StatusTextBlock" />
        <Button Content="Pause" Command="{Binding PauseCommand}" />
        <Button Content="Stop" Command="{Binding StopCommand}" />
        <Button Content="Resume" Command="{Binding ResumeCommand}" />
    </StackPanel>
</Window>
